<%= render '/books/navbar' %>

<div class='devise-container'>
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean, label: "Lembrar de mim" if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="login-footer">
      <%= link_to "Cadastre-se", new_registration_path(resource_name), class:"btn btn-secondary" %><br />
    <%= link_to "Esqueceu a sua senha?", new_password_path(resource_name), class:"btn btn-danger" %><br />
  </div>



</div>
